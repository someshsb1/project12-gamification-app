@model List<Gamification.UI.Models.UserChatInfoViewModel>

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="alert alert-primary alert-dismissible fade show text-center" role="alert">
            <strong>Chats</strong>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="input-group mb-3">
            <input type="text" id="user-search" class="form-control" placeholder="Search by Name">
            <button class="btn btn-outline-secondary" type="button" id="search-button">Search</button>
        </div>
    </div>
</div>



@if (Model == null || !Model.Any())
{
    <!-- Display a message for no results -->
    <div class="row">
        <div class="alert alert-primary alert-dismissible" role="alert">
            Nothing found yet!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
else
{
    <!-- Loop through the UserChatInfoViewModel list -->
    @foreach (var userChat in Model)
    {
        <div class="row user-card" data-username="@userChat.UserName">
            <a href="@Url.Action("ChatDetails", "Home", new { receiverId = userChat.UserId })">
                <div class="col-md-12 col-lg-12 col-xl-12 col-sm-12">
                    <div class="card mt-3">
                        <div class="card-body">
                            <ul class="p-0 m-0">
                                <li class="d-flex mb-1 pb-1">
                                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-5">
                                        
                                        <div class="me-2">
                                            <h6 class="mb-0">@userChat.UserName</h6>
                                        </div>

                                        @if (userChat.UnreadMessageCount > 0)
                                        {
                                            <div class="user-progress">
                                                <small class="fw-semibold">
                                                    <span class="badge rounded-pill bg-primary">Unread Messages: @userChat.UnreadMessageCount</span>
                                                </small>
                                            </div>
                                        }

                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#search-button").click(function () {
            var searchKeyword = $("#user-search").val().toLowerCase();

            // Filter the user list based on the search input
            $(".user-card").each(function () {
                var userName = $(this).data("username").toLowerCase();

                if (userName.includes(searchKeyword)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>
