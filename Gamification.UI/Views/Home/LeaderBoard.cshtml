@model IEnumerable<Gamification.UI.Models.LeaderBoader>
<div class = "row">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ECPJX21DQD"></script>
    <script>
