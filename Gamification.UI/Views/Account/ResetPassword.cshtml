@model ResetPasswordViewModel
@{
    Layout = "_MiniLayoutTwo";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
                    <h4>Reset your password</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Code" hidden />
                    <div class="form-group m-2">
                        <label asp-for="Username" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
  
                    <div class="form-group m-2">
                        <label asp-for="Password" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <label asp-for="ConfirmPassword" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary form-control">Reset</button>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <div class="col-md-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-outline-info form-control">Go Home</a>
                        </div>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}