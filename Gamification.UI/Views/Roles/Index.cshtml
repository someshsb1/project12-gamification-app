@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    Layout = "_MiniLayoutTwo";
}
<div class="row">
    <div class="col-6">
        <h5 class="text-primary">Roles List </h5>
        <div class="form-group m-2">
            <div class="col-md-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-outline-info form-control">Go Home</a>
            </div>
        </div>
    </div>
    @*<div class="col-6 text-right">
        <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Create New Role</a>
    </div>*@
</div>
<div class="p-4 border rounded">
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                @*<th>
                    ID
                </th>*@
                <th>
                    Name
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                   @* <td>
                        @item.Id
                    </td>*@
                    <td>
                        @item.Name
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </table>
    }
</div>
